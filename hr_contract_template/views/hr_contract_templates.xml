<odoo>
    <template id="report_contract_template">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <div class="row">
                            <div class="col-4">
                                <strong>Nombre del cargo:</strong>
                                <br/>
                                <span t-field="doc.name"/>
                            </div>
                            <div class="col-4">
                                <strong>Salario:</strong>
                                <br/>
                                <span t-field="doc.wage"/>
                            </div>
                        </div>
                        <br/>
                        <span t-field="doc.body"/>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="report_contract_inherit" name="report_contract_inherit assets"
              inherit_id="l10n_cu_hr_contract.report_contract">
        <xpath expr="//div[@class='page']" position="inside">
            <t t-if="doc.print_template">
                <div style="page-break-before: always" class="mb 8"></div>
                <!--                <t t-call="hr_contract_template.report_contract_template"/>-->
                <!--                <span t-field="doc.contract_template_id.body"/>-->
                <div class="row">
                    <div class="col-4">
                        <strong>Nombre del cargo:</strong>
                        <br/>
                        <span t-field="doc.contract_template_id.name"/>
                    </div>
                    <div class="col-4">
                        <strong>Salario:</strong>
                        <br/>
                        <span t-field="doc.contract_template_id.wage"/>
                    </div>
                </div>
                <br/>
                <span t-field="doc.contract_template_id.body"/>
            </t>
        </xpath>
    </template>
</odoo>